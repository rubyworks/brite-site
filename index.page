---
title   : My First Brite Blog!
layout  : page
stencil : liquid

--- html

<div class="page">

{% for post in site.posts %}
  <div class="post">
    <div class="heading">
      <span class="date">{{ post.date | date_to_string }}</span>
      <a class="title" href="{{ post.url }}">{{ post.title }}</a>
    </div>
    {{ post.content }}
    <!-- <small>Written by {{ post.author }}</small> -->
  </div>
  <br/>
{% endfor %}

</div>

